<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

<body>

  <metal:content-core fill-slot="content-core">
<div>
    <tal:block tal:condition="context/descripcioOrgan">
      <h4> Descripció de l'Òrgan </h4>
    <div tal:replace="structure context/descripcioOrgan/output" />
    </tal:block>

    <tal:block tal:condition="context/membresOrgan">
      <h4> Membres de l'Òrgan </h4>
      <span tal:content="context/membresOrgan" />
    </tal:block>

    <tal:block tal:condition="context/adrecaLlista">
      <h4> Adreça de la llista </h4>
      <span tal:content="context/adrecaLlista" />
    </tal:block>    
</div>

    <metal:block define-macro="listing" extend-macro="context/folder_listing/macros/content-core">
      <metal:entries fill-slot="entries">
        <hr/><h3>Llistat de Sessions</h3>
        <table class="listing"
               summary="Content listing"
               i18n:attributes="summary summary_content_listing;">
            <thead>
              <tr>
                <th>&nbsp;
                  <tal:title i18n:translate="listingheader_title">Title</tal:title>&nbsp;
                </th>
                <th>&nbsp;Data de la sessió&nbsp;</th>
                <th>&nbsp;Lloc&nbsp;</th>                                 
                <th>&nbsp;Hora inici&nbsp;</th>                 
                <th>&nbsp;Hora fi&nbsp;</th>                
                <th>&nbsp;Creador &nbsp;</th>
                <th>&nbsp;Darrera modificació&nbsp;</th>
              </tr>
            </thead>

            <tbody>
              <metal:block use-macro="context/folder_listing/macros/entries">
                <metal:entry fill-slot="entry">
                  <tr metal:define-macro="listitem" 
                      tal:define="oddrow repeat/item/odd;
                                  obj item/getObject">
                    <td>
                      <a href="#"
                         tal:attributes="href item_url;
                                         class string:$item_wf_state_class $item_type_class;
                                         title item_url;
                                         alt item_url"
                         tal:content="item_title_or_id">
                          Item Title
                      </a>
                    </td>
                    <td>&nbsp;
                      <tal:data tal:content="python:obj.dataSessio.strftime('%d/%m/%Y')">
                        Data de la Sessió
                      </tal:data>&nbsp;
                    </td>                     
                    <td>&nbsp;
                      <tal:data tal:content="obj/llocConvocatoria">
                        Lloc Convocatoria
                      </tal:data>&nbsp;
                    </td>                                 
                    <td>&nbsp;
                      <tal:data tal:content="python:obj.horaInici.strftime('%H:%M')">
                        Hora inici
                      </tal:data>&nbsp;
                    </td>                 
                    <td>&nbsp;
                      <tal:data tal:content="python:obj.horaFi.strftime('%H:%M')">
                        Hora fi
                      </tal:data>&nbsp;
                    </td>
                    <td>
                      <tal:name tal:condition="item_creator"
                        tal:define="author python:pas_member.info(item_creator)"
                        tal:content="author/name_or_id">
                      </tal:name>
                    </td>
                    <td tal:content="python:toLocalizedTime(item_modified,long_format=1)">
                      August 16, 2001 at 23:35:59
                    </td>
                  </tr>
                </metal:entry>
              </metal:block>
            </tbody>
          </table>
        </metal:entries>
      </metal:block>
    <metal:subtopics use-macro="context/atct_topic_view/macros/folderlisting_macro" />
  </metal:content-core>

</body>
</html>