<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="ca"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="genweb.rectorat">
<body>

<metal:content-core fill-slot="content-core" 
   tal:define="portal_url context/@@plone_portal_state/portal_url;">

  <tal:omit-tag condition="view/isAuthenticated">
    <button type="button" class="btn btn-primary" style="float:right"
            data-toggle="modal" data-target="#sendmailModal">
      <i class="icon-envelope icon-white"></i> <span i18n:translate=""> Send message </span>
    </button>

    <link rel="stylesheet" href="http://www.claystreet.com/sites/claystreet/dev/bootstrap/rta/css/bootstrap-rta-1.0.1.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script src="http://www.claystreet.com/sites/claystreet/dev/bootstrap/rta/js/bootstrap-2.3.1.min.js"></script>
    <script src="http://www.claystreet.com/sites/claystreet/dev/bootstrap/rta/js/bootstrap-rta-1.0.0.min.js"></script>

    <style type="text/css" media="screen">
     .btn-group {
        display: inline-block;
      }
    </style>

    <div class="modal fade" id="sendmailModal" tabindex="-1" role="dialog" aria-labelledby="sendmailModalLabel" aria-hidden="true"
      tal:attributes="data-mails view/OrganMail">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="sendmailModalLabel" i18n:translate="">New message</h4>
          </div>
          <div class="modal-body">
            <form action="addLogMail" method="POST" name="rtaform" id="rtaform">
              <div class="form-group">
                <label for="recipient-name" class="control-label" i18n:translate="">Recipients</label>
                <br/>
                <description i18n:translate="">Mail address separated by commas.</description>
                <input type="text" class="form-control span12" 
                       id="recipients-name" name="recipients-name" 
                       style="width: 97%" />
              </div>
              <div class="form-group">
                <label for="message-text" class="control-label" i18n:translate="">Message</label>
                <br/>
                <description i18n:translate="">This content will be used as message content</description>

                <div class="controls">
                  <textarea rows="7"
                            class="rta form-control"
                            id="message-text"
                            name="message-text"
                            data-rta-btnsize="small"
                            placeholder="Contingut a annexar al missatge de correu"
                            style="width:97%;">
                  </textarea>
                  <br/>
                </div> 

              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" 
                        data-dismiss="modal" i18n:translate="">Close</button>
                <button type="submit" id="submit" value="Send" 
                        class="btn btn-primary" i18n:translate="">Send message</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <script type="text/javascript">
    $(document).ready(function() {
        $.rta('bold italic underline, ul ol, align-left align-center align-right align-full, indent-left indent-right, remove-formatting html');
    });

    $('#sendmailModal').on('show.bs.modal', function (event) {
      var modal = $(this)
      button = document.getElementById('sendmailModal')

      var mails = button.getAttribute('data-mails')
      modal.find('.modal-body input').val(mails)
    })
    </script>

  </tal:omit-tag>

  <div>

    <div class="span12">
      <div class="span8">
        <tal:block tal:condition="context/ordreSessio">
          <div id="accordion1">
              <h3 class="accordion-toggle">
                <a style="color:#557C95" i18n:translate="">Session order</a>
                 <i class="icon-chevron-down"></i>
              </h3>
            <div class="accordion-content">
              <div tal:replace="structure context/ordreSessio/output|nothing" />
            </div>
          </div>
        </tal:block>
      </div>
      <div class="span4 resultsBox" >
        <h3 style="text-align: center;"
            i18n:translate=""> Session info </h3>
        <ul>
          <li tal:condition="context/dataSessio">
            <b i18n:translate="">Data:</b>
            <span style="float:right" 
                  tal:content="python:context.dataSessio.strftime('%d/%m/%Y')"></span>
          </li>
          <li tal:condition="context/horaInici">
            <b i18n:translate="">Session start time</b>:
            <span style="float:right" 
                  tal:content="python:context.horaInici.strftime('%H:%M')"></span>
          </li> 
          <li tal:condition="context/horaFi">
            <b i18n:translate="">Session end time</b>:
            <span style="float:right" 
                  tal:content="python:context.horaFi.strftime('%H:%M')"></span>
          </li>                 
          <li tal:condition="context/llocConvocatoria">
            <b i18n:translate="">Lloc:</b>
            <span style="float:right" 
                  tal:content="context/llocConvocatoria"></span>
          </li> 
          <li style="float:right" class="linkNotificacions" tal:condition="view/LogInformation">
            <a tal:attributes="href string:${context/absolute_url}#notificationsList">
              <b i18n:translate="">Notifications history</b>  <i class="icon-chevron-down"></i>
            </a>
          </li>   
        </ul>
      </div>
    </div>
  </div>

  <div style="clear:both;"></div>

  <tal:block tal:condition="context/membresConvocats">
    <hr/>
    <div id="accordion2">
        <h3 class="accordion-toggle">
          <a style="color: #557c95;" i18n:translate="">Incoming members list</a>
           <i class="icon-chevron-down"></i>
        </h3>

      <div class="accordion-content" style="display:none;">
        <div tal:replace="structure context/membresConvocats/output|nothing" />
      </div>
    </div>
  </tal:block>

  <tal:block tal:condition="context/membresConvidats">
    <hr/>
    <div id="accordion3">
        <h3 class="accordion-toggle">
          <a style="color: #557c95;" i18n:translate="">Invited members</a>
           <i class="icon-chevron-down"></i>
        </h3>

      <div class="accordion-content" style="display:none;">
        <div tal:replace="structure context/membresConvidats/output|nothing" />
      </div>
    </div>
  </tal:block>

  <tal:block tal:condition="context/llistaExcusats">
    <hr/>
    <div id="accordion4">
        <h3 class="accordion-toggle" >
          <a style="color: #557c95;" i18n:translate="">Excused members</a>
           <i class="icon-chevron-down"></i>
        </h3>

      <div class="accordion-content" style="display:none;">
        <div tal:replace="structure context/llistaExcusats/output|nothing" />
      </div>
    </div>
  </tal:block>

  <tal:actes tal:define="item view/ActasInside" tal:condition="item">
    <hr/>
    <h3 i18n:translate="">Llistat d'actes</h3>
    <tal:documents repeat="item view/ActasInside">
      <ul style="list-style:none;">
        <h4>
        <li tal:define="obj item/getObject">
          <i class="icon-page"></i>
            <a tal:attributes="href obj/absolute_url"
               tal:content="obj/title"
               style="font-weight: initial;">
                Link a Acta
            </a>
          </li>
        </h4>
      </ul>
    </tal:documents>
  </tal:actes>

  <tal:RelatedDocs tal:define="item view/DocumentsInside" tal:condition="item">
    <hr/>
    <h3 i18n:translate="">Related documents</h3>
    <table class="listing">
        <thead>
          <tr>
            <th style="width: 8%">
              <tal:head i18n:translate="">Point</tal:head>
            </th>
            <th style="width: 9%">
              <tal:head i18n:translate="">Agreement</tal:head>
            </th>     
            <th style="width: 30%">
              <tal:head i18n:translate="">Title</tal:head>&nbsp;
            </th>
            <th style="width: 19%" tal:condition="view/isAuthenticated">
              <tal:head i18n:translate="">Approval status</tal:head>
            </th> 
            <th style="width: 17%">
              <tal:head i18n:translate="">Published files</tal:head>
            </th>                                 
            <th style="width: 17%" tal:condition="view/isAuthenticated">
              <tal:head i18n:translate="">Original files</tal:head>
            </th>                 
          </tr>
        </thead>
          <tal:documents repeat="item view/DocumentsInside">
            <tal:block tal:define="obj item/getObject;
                                   wf_state item/portal_workflow">
              <tr >
                <td style="text-align: center;">
                    <span tal:content="obj/proposalPoint">
                      Point number
                    </span>
                </td>
                <td style="text-align: center;">
                    <span tal:content="obj/agreement">
                      Agreement number
                    </span>
                </td>                                                      
                <td>
                  <a href="#"
                     tal:attributes="href obj/absolute_url;
                                     class string:state-${wf_state/review_state}"
                     tal:content="obj/title">
                      Item Title
                  </a>
                </td>
                <td style="text-align: center;" tal:condition="view/isAuthenticated">
                    <span i18n:translate=""
                          tal:content="obj/estatAprovacio"
                          tal:attributes="class obj/estatAprovacio">
                      Approval status
                    </span>
                </td>
                <td>
                  <ul tal:condition="obj/PublishedFiles">
                    <tal:files repeat="item obj/PublishedFiles">
                      <li>
                        <a tal:attributes="href string:${obj/absolute_url}/@@edit/++widget++form.widgets.PublishedFiles/@@download/${repeat/item/index};"
                           i18n:attributes="alt Download; title Download"
                           tal:content="item/filename">
                          Published files
                        </a>
                      </li>
                    </tal:files>
                  </ul>
                </td>
                <td tal:condition="view/isAuthenticated">
                  <ul tal:condition="obj/OriginalFiles">
                    <tal:files repeat="item obj/OriginalFiles">
                      <li>
                        <a tal:attributes="href string:${obj/absolute_url}/@@edit/++widget++form.widgets.OriginalFiles/@@download/${repeat/item/index};"
                           i18n:attributes="alt Download; title Download"
                           tal:content="item/filename">
                          Original files
                         </a>
                      </li>
                    </tal:files>
                  </ul>
                </td>
              </tr>
            </tal:block>
          </tal:documents>
      </table>
  </tal:RelatedDocs>

  <tal:omit-tag tal:condition="view/LogInformation">
    <hr/>
    <div id="accordion5">
        <h3 class="accordion-toggle">
          <a style="color: #557c95;" name="notificationsList" i18n:translate="">Notifications history</a>
           <i class="icon-chevron-down"></i>
        </h3>

      <div class="accordion-content" style="display:none;">
        <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>
                     <tal:data i18n:translate="">Data i hora</tal:data>
                   </th>
                  <th>
                    <tal:data i18n:translate="">Notificador</tal:data>
                  </th>
                  <th>
                    <tal:data i18n:translate="">Destinataris</tal:data>
                  </th>
                </tr>
              </thead>
              <tbody>
                <tal:documents repeat="data view/LogInformation">
                  <tr>
                    <td tal:define="value data/dateMail"
                        tal:content="python:value.strftime('%d/%m/%Y %H:%M:%S')">
                    </td>
                    <td tal:content="data/fromMail"></td>
                    <td tal:content="data/toMail"></td>
                  </tr>
                </tal:documents>
              </tbody>
            </table>
          </div>
      </div>
    </div>
  </tal:omit-tag>

<script type="text/javascript">
  $(document).ready(function($) {

      $('#accordion1').find('.accordion-toggle').click(function(){
        //Expand or collapse this panel
        $(this).next().slideToggle('fast');
      });
      $('#accordion2').find('.accordion-toggle').click(function(){
        //Expand or collapse this panel
        $(this).next().slideToggle('fast');
      });
      $('#accordion3').find('.accordion-toggle').click(function(){
        //Expand or collapse this panel
        $(this).next().slideToggle('fast');
      });
      $('#accordion4').find('.accordion-toggle').click(function(){
        //Expand or collapse this panel
        $(this).next().slideToggle('fast');
      });
      $('#accordion5').find('.accordion-toggle').click(function(){
        //Expand or collapse this panel
        $(this).next().slideToggle('fast');
      });      


  });
</script>

</metal:content-core>

</body>
</html>

