<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="genweb.rectorat">
<body>

<metal:content-core fill-slot="content-core">
    <metal:content-core define-macro="content-core">

    <tal:block tal:condition="context/descripcioProposit">
      <h3 i18n:translate=""> Proposal description </h3>
      <div tal:replace="structure context/descripcioProposit/output" />
    </tal:block>

    <tal:block tal:condition="context/numDoc">
      <h4 i18n:translate=""> Document number </h4>
    <div tal:replace="structure context/numDoc" />
    </tal:block>

    <tal:block tal:condition="context/proposalPoint">
      <h4 i18n:translate=""> Proposal point number </h4>
    <div tal:replace="structure context/proposalPoint" />
    </tal:block>

    <tal:block tal:condition="context/estatAprovacio">
      <h4 i18n:translate=""> Approval status </h4>
    <div tal:replace="structure context/estatAprovacio" />
    </tal:block>

    <tal:block tal:condition="context/comentariEstatAprovacio">
      <h3 i18n:translate=""> Approval status comment </h3>
    <div tal:replace="structure context/comentariEstatAprovacio/output" />
    </tal:block>

    <fieldset tal:condition="context/fitxersOriginal">
      <legend i18n:translate="">Original files</legend>
      <ul>
        <tal:files repeat="item context/fitxersOriginal">
          <li>
            <a href=""
               tal:attributes="href string:${context/absolute_url}/@@edit/++widget++form.widgets.fitxersOriginal/@@download/${repeat/item/index};"
               tal:content="item/filename">
              Original files
             </a>
          </li>
        </tal:files>
      </ul>
    </fieldset>    

    <fieldset tal:condition="context/fitxersPerPublicar">
      <legend i18n:translate="">Published files</legend>
      <ul>
        <tal:files repeat="item context/fitxersPerPublicar">
          <li>
            <a href=""
               tal:attributes="href string:${context/absolute_url}/@@edit/++widget++form.widgets.fitxersPerPublicar/@@download/${repeat/item/index};"
               tal:content="item/filename">
              Published files
            </a>
          </li>
        </tal:files>
      </ul>
    </fieldset>  

    </metal:content-core>
</metal:content-core>

</body>
</html>

